{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Vendas.API/Vendas.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Vendas.API/Vendas.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Vendas.API/Vendas.API.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/Vendas.API/Vendas.API.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "run-https",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--launch-profile",
                "https",
                "--project",
                "${workspaceFolder}/src/Vendas.API/Vendas.API.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "run-production",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--launch-profile",
                "Production",
                "--project",
                "${workspaceFolder}/src/Vendas.API/Vendas.API.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "run-custom-port",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--launch-profile",
                "Custom Port",
                "--project",
                "${workspaceFolder}/src/Vendas.API/Vendas.API.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        }
    ]
}