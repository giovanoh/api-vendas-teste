{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Vendas API (HTTP)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Vendas.API/bin/Debug/net8.0/Vendas.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Vendas.API",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            }
        },
